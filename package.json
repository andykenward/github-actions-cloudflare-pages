{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "tsc:check": "tsc --noEmit --checkJs",
    "tsc:ls": "npm run tsc:check -- --listFilesOnly",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .  --ext .ts,.cjs,.js",
    "lint:debug": "npm run lint -- --debug",
    "lint:fix": "npm run lint -- --fix",
    "lint:ls": "DEBUG=eslint:cli-engine npm run lint",
    "package": "ncc build --source-map --license licenses.txt --target es2021",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "all": "npm run tsc:check && npm run build && npm run format && npm run lint:ls && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unlike-ltd/cloudflare-pages-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "^16.20.0"
  },
  "dependencies": {
    "@actions/core": "1.10.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "1.0.4",
    "@types/eslint": "8.40.0",
    "@types/node": "18.16.16",
    "@types/prettier": "2.7.2",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "@vercel/ncc": "0.36.1",
    "@vitest/ui": "0.31.1",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-unicorn": "47.0.0",
    "eslint-plugin-vitest": "0.2.5",
    "prettier": "2.8.8",
    "typescript": "5.0.4",
    "vitest": "0.31.1"
  }
}
