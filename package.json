{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "dev": "pnpm run ts-node --require dotenv/config src/index.ts",
    "start": "node -r dotenv/config ./dist/index.js",
    "build": "node ./esbuild.config.mjs",
    "build:cli": "esbuild src/index.ts --bundle --platform=node --target=node16.20.0 --format=esm --legal-comments=external --minify --sourcemap --analyze --outfile=dist/index.js --tree-shaking=true",
    "tsc:check": "tsc --noEmit --checkJs",
    "tsc:watch": "pnpm run tsc:check --watch",
    "tsc:ls": "pnpm run tsc:check --listFilesOnly",
    "tsc:ts-node-config": "tsc --showConfig > tsconfig.tsnode.json",
    "ts-node": "ts-node-esm --project tsconfig.tsnode.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:debug": "pnpm run lint -- --debug",
    "lint:fix": "pnpm run lint -- --fix",
    "lint:ls": "DEBUG=eslint:cli-engine pnpm run lint",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "all": "pnpm run codegen && pnpm run tsc:check && pnpm run format && pnpm run lint:ls && pnpm run test:ci && pnpm run build",
    "act:d": "act -j delete --secret-file .env",
    "codegen": "pnpm run ts-node -T bin/codegen/index.ts",
    "download": "pnpm run ts-node -T bin/download/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unlike-ltd/cloudflare-pages-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "^18.16.0",
    "pnpm": "^8"
  },
  "packageManager": "pnpm@8.6.1",
  "dependencies": {
    "@actions/core": "1.10.0",
    "undici": "5.22.1",
    "wrangler": "3.0.1"
  },
  "devDependencies": {
    "@cloudflare/types": "6.21.13",
    "@ianvs/prettier-plugin-sort-imports": "4.0.2",
    "@octokit/core": "4.2.1",
    "@octokit/webhooks-schemas": "7.0.2",
    "@octokit/webhooks-types": "7.0.2",
    "@tsconfig/esm": "1.0.3",
    "@tsconfig/node18": "2.0.1",
    "@types/eslint": "8.40.0",
    "@types/json-schema": "7.0.12",
    "@types/node": "18.16.16",
    "@types/prettier": "2.7.3",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "@vitest/ui": "0.31.4",
    "dotenv": "16.1.4",
    "esbuild": "0.17.19",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-unicorn": "47.0.0",
    "eslint-plugin-vitest": "0.2.5",
    "execa": "7.1.1",
    "prettier": "2.8.8",
    "ts-node": "10.9.1",
    "typescript": "5.1.3",
    "vitest": "0.31.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react"
      ]
    }
  }
}
